@model UniversityMIS.Models.Subject

@{
    ViewData["Title"] = "Create Subject";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Create New Subject</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="SubjectName" class="form-label"></label>
                <input asp-for="SubjectName" class="form-control" placeholder="Enter Subject name" />
                <span asp-validation-for="SubjectName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SemesterId" class="form-label"></label>
                <select asp-for="SemesterId" class="form-select" asp-items="@ViewBag.Semester"></select>
                <span asp-validation-for="SemesterId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-check-lg"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>