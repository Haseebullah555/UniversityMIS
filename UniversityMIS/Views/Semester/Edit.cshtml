@model UniversityMIS.Models.Semester

@{
    ViewData["Title"] = "Update Semester";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Update Semester</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id">
            <div class="mb-3">
                <label asp-for="SemesterName" class="form-label"></label>
                <input asp-for="SemesterName" class="form-control" placeholder="Enter semester name" />
                <span asp-validation-for="SemesterName" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-lg"></i> Save changes
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>